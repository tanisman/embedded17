extends layout

block script
    script.
            $(function () {
            var socket = io();
            socket.on('update table', function(msg){
              $('#sensor_table tr:first').after(msg);
             });
           });
block content
    h1= title
    table(id='sensor_table' border=1)
        tr
            th Measure Unit
            th Time
            th Temperature
            th Humidity
        for result in results
            - var temp = parseInt(Math.round(result.temperature))
            - var hum = parseInt(Math.round(result.humidity)
            tr
                td #{ result.measure_unit.name }
                td #{ result.log_date }
                td #{ temp } &#8451
                td #{ hum }%

        
